<form method="post" action="/hogwarts/students">
  <label for="first-name">First Name:</label>
    <input id="first-name" type="text" name="first_name"/><br>

  <label for="second-name">Second Name:</label>
    <input id="second-name" type="text" name="second_name"/><br>

  <label for="select_house">Select student house!</label>
    <select id="select_house" name="house_id">
      <% @houses.each do |house|  %>
      <option value=<%= house.id %>><%=  house.name%></option>
      <% end %>
    </select><br>

    <label for="age">Age:</label>
      <input id="age" type="number" name="age"/><br>

    <input type="submit" value="Add Student"/>
</form>
